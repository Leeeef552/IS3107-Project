# =====================================================================
# DATABASE CONFIGURATION
# =====================================================================
TIMESCALE_HOST=timescaledb
TIMESCALE_PORT=5432
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=pass
TIMESCALE_DBNAME=postgres

# =====================================================================
# NEWS API KEYS (for Sentiment Analysis)
# =====================================================================

# NewsAPI - https://newsapi.org/register
# Free tier: 100 requests/day, 1 month historical data
# Used for: Daily, weekly, and monthly sentiment updates (NOT hourly)
# Note: Automatically capped at 30 days to respect free tier limits
NEWS_API_KEY=your_newsapi_key_here

# CryptoCompare - https://www.cryptocompare.com/cryptopian/api-keys
# Free tier: 100,000 calls/month
# Used for: All time intervals (hourly, daily, weekly, monthly)
CRYPTOCOMPARE_API_KEY=your_cryptocompare_key_here

# Reddit API - https://www.reddit.com/prefs/apps
# Create a "script" app to get credentials (completely free)
# Used for: All time intervals
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=BitcoinSentimentBot/1.0

# ALPHA VANTAGE - https://www.alphavantage.co/support/#api-key 
# email can just put as test@company.com 
# limit to 25 requests a day, mainly for historical news
ALPHA_VANTAGE_API_KEY = your_alphavantage_api_key

# =====================================================================
# LOCAL DIRECTORY AND FILEPATHS FOR AIRFLOW
# =====================================================================
DATA_DIR=/opt/historical_data
SCHEMA_DIR=/opt/schema
AGGREGATES_DIR=/opt/aggregates

# =====================================================================
# AIRFLOW CONFIGURATION
# =====================================================================
AIRFLOW_UID=50000
AIRFLOW_GID=0
